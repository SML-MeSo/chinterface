{
  "name": "chinterface",
  "version": "2.5.0",
  "description": "Universal Chat interface library for popular stream services",
  "main": "dist/chinterface.umd.js",
  "module": "dist/chinterface.modern.js",
  "source": "src/chat.js",
  "scripts": {
    "build": "microbundle --globals tmi.js=tmi -f modern,umd",
    "format": "prettier --single-quote --tab-width 2 --write 'src/**/*.js'",
    "prepublish": "yarn run build"
  },
  "devDependencies": {
    "cross-env": "^5.0.2",
    "html-entities": "^1.3.1",
    "microbundle": "0.12.0-next.8",
    "prettier": "^1.5.3",
    "tmi.js": "^1.5.0"
  },
  "peerDependencies": {
    "tmi.js": ">= 1.5.0"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://git.player.me/player/chinterface-v2.git"
  },
  "keywords": [
    "Chat",
    "Twitch",
    "Youtube",
    "Mixer"
  ],
